<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.Guideline
        android:id="@+id/guide_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/customer_index"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/customer_nickname"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constrainedWidth="true"
        android:textSize="100sp"
        tools:text="1"
        />

    <TextView
        android:id="@+id/customer_nickname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="customer_index"
        app:layout_constraintEnd_toStartOf="@id/customer_score"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constrainedWidth="true"
        android:textSize="100sp"
        tools:text="황성태"/>

    <TextView
        android:id="@+id/customer_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="customer_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constrainedWidth="true"
        android:textSize="100sp"
        tools:text="20"/>

</androidx.constraintlayout.widget.ConstraintLayout>